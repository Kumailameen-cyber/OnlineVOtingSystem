@{
    ViewData["Title"] = "Admin Dashboard";
    var username = HttpContextAccessor?.HttpContext?.Session?.GetString("Username");
}

<!-- SAME NAVBAR (Home + Logout) -->
<nav style="
    width: 100%;
    padding: 15px 20px;
    background: #2c3e50;
    color: white;
    display: flex;
    justify-content: space-between;
">
    <a asp-controller="Admins" asp-action="AdminDashboard"
       style="color: white; text-decoration: none; font-size: 18px; font-weight: bold;">
        Home
    </a>
    @if (!string.IsNullOrEmpty(username))
    {
        <span style="color:white; margin-left:20px; font-weight:bold;">
            Welcome, @username
        </span>
    }

    <a asp-controller="Users" asp-action="Logout"
       style="color: white; text-decoration: none; font-size: 18px; font-weight: bold;">
        Logout
    </a>
</nav>

<div style="padding-top: 80px;"></div>

<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
    }

    .dashboard-container {
        max-width: 900px;
        margin: 50px auto;
        padding: 40px;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        text-align: center;
    }

    h1 {
        color: #1d976c;
        margin-bottom: 40px;
        font-size: 32px;
        font-weight: 600;
    }

    .dashboard-buttons {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-top: 20px;
    }

    .dashboard-button-style {
        display: block;
        padding: 20px;
        border-radius: 12px;
        text-decoration: none;
        color: white;
        font-size: 18px;
        font-weight: bold;
        transition: 0.3s;
        background: #1d976c;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        text-align: center;
    }

        .dashboard-button-style:hover {
            background: #93f9b9;
            color: #1d976c;
            box-shadow: 0 6px 15px rgba(0,0,0,0.2);
        }

    .logout-button {
        margin-top: 30px;
        display: flex;
        justify-content: center;
    }

        .logout-button a {
            width: 200px;
        }
</style>

<div class="dashboard-container">
    <h1>Admin Dashboard</h1>

    <div class="dashboard-buttons">
        <a asp-controller="UserManagement" asp-action="Index" class="dashboard-button-style">Manage Users</a>
        <a asp-controller="Candidates" asp-action="Index" class="dashboard-button-style">Manage Candidates</a>
        <a asp-controller="Results" asp-action="Index" class="dashboard-button-style">View Results</a>
        <a asp-controller="Elections" asp-action="Index" class="dashboard-button-style">Manage Elections</a>
        <a asp-controller="Votes" asp-action="ManageVotes" class="dashboard-button-style">Manage Votes</a>
        <a asp-controller="Announcements" asp-action="Index" class="dashboard-button-style">Manage Announcements</a>
        <a asp-controller="Reports" asp-action="Index" class="dashboard-button-style">Reports & Analytics</a>
        
    </div>

</div>
