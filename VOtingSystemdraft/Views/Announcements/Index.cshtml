@model IEnumerable<VOtingSystemdraft.Models.Announcement>

@{
    ViewData["Title"] = "Announcements";
}

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center mb-3">
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Admins" asp-action="AdminDashboard"
               class="btn btn-outline-secondary"
               aria-label="Back to Dashboard" title="Back to Dashboard">
                <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
            </a>
        }
        else if (User.IsInRole("Candidate"))
        {
            <a asp-controller="Candidates" asp-action="CandidateDashboard"
               class="btn btn-outline-secondary"
               aria-label="Back to Dashboard" title="Back to Dashboard">
                <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
            </a>
        }
        else
        {
            <a asp-controller="Voters" asp-action="VoterDashboard"
               class="btn btn-outline-secondary"
               aria-label="Back to Dashboard" title="Back to Dashboard">
                <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
            </a>
        }
    </div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Manage Announcements</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Create New
            </a>
        }
    </div>
    <div class="row">
        @foreach (var a in Model)
        {
            <div class="col-12 col-md-6 mb-4">
                <div class="card shadow-sm rounded-3 h-100">
                    <div class="card-header bg-white border-0">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="mb-0 fw-semibold">@a.Title</h5>
                            <span class="text-muted small">@a.CreatedDate.ToString("g")</span>
                        </div>
                    </div>
                    <div class="card-body lh-base p-3">
                        <p class="mb-2">@a.Description</p>
                        @if (a.Admin?.User != null)
                        {
                            <small class="text-muted">Posted by: @a.Admin.User.Username</small>
                        }
                    </div>
                    <div class="card-footer bg-white border-0">
                        <div class="btn-group" role="group" aria-label="Announcement actions">
                            <a asp-action="Details" asp-route-id="@a.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (!Model.Any())
    {
        <div class="alert alert-info">No announcements yet.</div>
    }
</div>
