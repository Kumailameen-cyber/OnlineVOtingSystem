@model VOtingSystemdraft.Models.Candidate
@{
    ViewData["Title"] = "Candidate Dashboard";

    var username = HttpContextAccessor?.HttpContext?.Session?.GetString("Username");
}


<!-- ðŸ”¹ NAVBAR (Home + Logout) -->
<nav style="
    width: 100%;
    padding: 15px 20px;
    background: #2c3e50;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
">
    <a asp-controller="Candidate" asp-action="CandidateDashboard"
       style="color: white; text-decoration: none; font-size: 18px; font-weight: bold;">
        Home
    </a>

    @if (!string.IsNullOrEmpty(username))
    {
        <span style="color:white; margin-left:20px; font-weight:bold;">
            Welcome, @username
        </span>
    }


    <a asp-controller="Users" asp-action="Logout"
       style="color: white; font-weight: bold; text-decoration: none;">
        Logout
    </a>

    
</nav>



    <!-- Show the normal candidate dashboard -->
    <div class="dashboard-container">
        <h1>Candidate Dashboard</h1>

        <div class="row mt-2">
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Candidates" asp-action="Edit" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-person-gear fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">Update My Profile</div>
                            <small class="text-muted">Edit personal and party details</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Votes" asp-action="MyVotes" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-graph-up fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">View My Voting Stats</div>
                            <small class="text-muted">Track participation metrics</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Candidates" asp-action="PartyInfo" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-flag fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">Party Info</div>
                            <small class="text-muted">View party policies</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Candidates" asp-action="ManageCampaign" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-bullseye fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">Manage Campaign</div>
                            <small class="text-muted">Plan and monitor outreach</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Candidates" asp-action="ElectionGuideLine" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-journal-text fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">Election Guidelines</div>
                            <small class="text-muted">Rules and compliance</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Announcements" asp-action="Index" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-megaphone fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">Announcements</div>
                            <small class="text-muted">Latest system updates</small>
                        </div>
                    </div>
                </a>
            </div>
        </div>

    </div>

<div class="dashboard-container" style="margin-top:20px;">
    <h2>Latest Announcements</h2>
    @{
        var latest = ViewBag.LatestAnnouncements as IEnumerable<VOtingSystemdraft.Models.Announcement>;
        latest = latest ?? Enumerable.Empty<VOtingSystemdraft.Models.Announcement>();
    }
    @foreach (var a in latest)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h5 class="card-title mb-1">@a.Title</h5>
                        <div class="text-muted small">
                            @a.CreatedDate.ToString("g")
                            @if (a.Admin?.User != null)
                            {
                                @: â€¢ by @a.Admin.User.Username
                            }
                        </div>
                    </div>
                    @if ((DateTime.Now - a.CreatedDate).TotalHours < 72)
                    {
                        <span class="badge bg-success">New</span>
                    }
                </div>
                <p class="card-text mt-2">@((a.Description?.Length ?? 0) > 240 ? a.Description.Substring(0,240) + "â€¦" : a.Description)</p>
                <a asp-controller="Announcements" asp-action="Details" asp-route-id="@a.Id" class="btn btn-sm btn-outline-primary">View Details</a>
            </div>
        </div>
    }
    @if (!latest.Any())
    {
        <div class="alert alert-info">No recent announcements.</div>
    }
    <a asp-controller="Announcements" asp-action="Index" class="btn btn-outline-primary">View All Announcements</a>
</div>


<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
    }

    .dashboard-container {
        max-width: 900px;
        margin: 50px auto;
        padding: 40px;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        text-align: center;
    }

    h1 {
        color: #1d976c;
        margin-bottom: 40px;
        font-size: 32px;
        font-weight: 600;
    }

    .dashboard-buttons {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-top: 20px;
    }

    .dashboard-button-style {
        display: block;
        padding: 20px;
        border-radius: 12px;
        text-decoration: none;
        color: white;
        font-size: 18px;
        font-weight: bold;
        transition: 0.3s;
        background: #1d976c;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        text-align: center;
    }

    .dashboard-button-style:hover {
        background: #93f9b9;
        color: #1d976c;
        box-shadow: 0 6px 15px rgba(0,0,0,0.2);
    }

    .logout-button {
        margin-top: 30px;
        display: flex;
        justify-content: center;
    }

    .logout-button a {
        width: 200px;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-group label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-group input {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
    }
</style>
