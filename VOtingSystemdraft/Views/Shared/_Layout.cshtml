<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Voting System</title>

    <!-- Saved Colors for later:
         Green: #0b6b34
         Light Green: #c9ffd6
    -->
</head>

<body>
    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
        var hideTopNav = (controller == "Voters" && action == "VoterDashboard")
                         || (controller == "Admins" && action == "AdminDashboard")
                         || (controller == "UserManagement");
        var showTopNav = !hideTopNav;
    }
    @if (showTopNav)
    {
        <nav style="width:100%; padding: 12px 20px; background:#2c3e50; color:white; display:flex; gap:16px;">
            <a asp-controller="Home" asp-action="Index" style="color:white; text-decoration:none; font-weight:bold;">Home</a>
            <a asp-controller="Results" asp-action="Index" style="color:white; text-decoration:none; font-weight:bold;">Results</a>
        </nav>
    }
    <div style="padding-top: 10px;">
        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
