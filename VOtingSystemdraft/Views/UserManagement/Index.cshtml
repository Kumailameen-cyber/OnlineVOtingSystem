@model IEnumerable<VOtingSystemdraft.Models.User>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Manage Users";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <div class="d-flex align-items-center gap-2">
            <div class="btn-group me-2">
                <a asp-controller="UserManagement" asp-action="Index" class="btn btn-outline-secondary">All</a>
                <a asp-controller="UserManagement" asp-action="Voters" class="btn btn-outline-secondary">Voters</a>
                <a asp-controller="UserManagement" asp-action="Candidates" class="btn btn-outline-secondary">Candidates</a>
            </div>
            <a asp-controller="Admins" asp-action="AdminDashboard" class="btn btn-secondary">
                Back to Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="mb-3">
        <a asp-controller="UserManagement" asp-action="CreateVoters" class="btn btn-primary">
            Add Voter
        </a>
        <a asp-controller="UserManagement" asp-action="CreateCandidates" class="btn btn-success">
            Add Candidate
        </a>
    </div>


    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Username</td>
                    <td>@u.Email</td>
                    <td>@u.Role</td>
                    <td>
                        @if (u.Role == "Voter")
                        {
                            <a asp-controller="Voter"
                               asp-action="Edit"
                               asp-route-id="@u.Id"
                               class="btn btn-sm btn-warning">
                                Edit
                            </a>
                        }
                        else if (u.Role == "Candidate")
                        {
                            <a asp-controller="Candidate"
                               asp-action="Edit"
                               asp-route-id="@u.Id"
                               class="btn btn-sm btn-warning">
                                Edit
                            </a>
                        }

                        <form asp-controller="UserManagement"
                              asp-action="Delete"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@u.Id" />
                            <button type="submit"
                                    class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this user?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No users found.</div>
    }
</div>
