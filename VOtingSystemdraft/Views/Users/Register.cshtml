@model VOtingSystemdraft.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Create an account";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">
                <h3 class="text-center mb-4 fw-bold">Create an account</h3>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                <form asp-action="Register" method="post" id="registerForm">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-semibold"></label>
                        <input asp-for="Username" class="form-control" />
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-semibold"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Role" class="form-label fw-semibold"></label>
                        <select asp-for="Role" class="form-select" id="roleSelect">
                            <option value="">-- Select Role --</option>
                            <option value="Voter">Voter</option>
                            <option value="Candidate">Candidate</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Role"></span>
                    </div>

                    <!-- Voter Fields -->
                    <div id="voterFields" class="d-none">
                        <h5 class="mt-3 mb-3 fw-bold">Voter Details</h5>
                        <div class="mb-3">
                            <label asp-for="VoterNationalId" class="form-label"></label>
                            <input asp-for="VoterNationalId" class="form-control" />
                            <span class="text-danger" asp-validation-for="VoterNationalId"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="VoterAddress" class="form-label"></label>
                            <input asp-for="VoterAddress" class="form-control" />
                            <span class="text-danger" asp-validation-for="VoterAddress"></span>
                        </div>
                    </div>

                    <!-- Candidate Fields -->
                    <div id="candidateFields" class="d-none">
                        <h5 class="mt-3 mb-3 fw-bold">Candidate Details</h5>
                        <div class="mb-3">
                            <label asp-for="CandidatePartyName" class="form-label"></label>
                            <input asp-for="CandidatePartyName" class="form-control" />
                            <span class="text-danger" asp-validation-for="CandidatePartyName"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CandidateSymbol" class="form-label"></label>
                            <input asp-for="CandidateSymbol" class="form-control" />
                            <span class="text-danger" asp-validation-for="CandidateSymbol"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CandidateBio" class="form-label"></label>
                            <textarea asp-for="CandidateBio" class="form-control"></textarea>
                            <span class="text-danger" asp-validation-for="CandidateBio"></span>
                        </div>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-3">Register</button>
                    </div>

                    <div class="text-center mt-3">
                        <a asp-action="Login" class="text-decoration-none">Already have an account? Login</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const roleSelect = document.getElementById('roleSelect');
            const voterBlock = document.getElementById('voterFields');
            const candidateBlock = document.getElementById('candidateFields');

            function setVisibility() {
                const role = roleSelect.value;
                // show/hide
                voterBlock.classList.toggle('d-none', role !== 'Voter');
                candidateBlock.classList.toggle('d-none', role !== 'Candidate');

                // disable inputs in hidden blocks to avoid client-side validation
                Array.from(voterBlock.querySelectorAll('input,textarea')).forEach(i => i.disabled = voterBlock.classList.contains('d-none'));
                Array.from(candidateBlock.querySelectorAll('input,textarea')).forEach(i => i.disabled = candidateBlock.classList.contains('d-none'));

                // remove client-side validation rules for disabled fields (if using jQuery validate)
                if (window.jQuery && jQuery.validator) {
                    $(voterBlock).find('input,textarea').each(function () {
                        if (this.disabled) { $(this).rules('remove'); }
                    });
                    $(candidateBlock).find('input,textarea').each(function () {
                        if (this.disabled) { $(this).rules('remove'); }
                    });
                }
            }

            // initial
            setVisibility();
            roleSelect.addEventListener('change', setVisibility);
        })();
    </script>
}
