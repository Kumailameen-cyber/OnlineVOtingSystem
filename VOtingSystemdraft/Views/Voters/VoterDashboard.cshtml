    </a>
</nav>

    <!-- Show the normal voter dashboard -->
    <div class="dashboard-container">
        <h1>Voter Dashboard</h1>

        <div class="row mt-2">
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Votes" asp-action="Index" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-check2-square fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">Cast Vote</div>
                            <small class="text-muted">Vote in active elections</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Candidates" asp-action="Index" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-person-badge fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">View Candidates</div>
                            <small class="text-muted">Browse candidate profiles</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Votes" asp-action="MyVotes" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-clock-history fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">My Voting History</div>
                            <small class="text-muted">See your past votes</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Voters" asp-action="ElectionInfo" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-journal-text fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">Election Guidelines</div>
                            <small class="text-muted">Learn rules and process</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Voters" asp-action="MyProfile" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-person-circle fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">Voter Profile</div>
                            <small class="text-muted">View and update details</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <a asp-controller="Results" asp-action="Index" class="card shadow-sm rounded-3 h-100 text-decoration-none">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-bar-chart fs-3 text-primary me-3"></i>
                        <div>
                            <div class="fw-semibold">See Results</div>
                            <small class="text-muted">View election outcomes</small>
                        </div>
                    </div>
                </a>
            </div>
        </div>

      
    </div>

<div class="dashboard-container" style="margin-top:20px;">
    <h2>Latest Announcements</h2>
    @{
        var latest = ViewBag.LatestAnnouncements as IEnumerable<VOtingSystemdraft.Models.Announcement>;
        latest = latest ?? Enumerable.Empty<VOtingSystemdraft.Models.Announcement>();
    }
    @foreach (var a in latest)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h5 class="card-title mb-1">@a.Title</h5>
                        <div class="text-muted small">
                            @a.CreatedDate.ToString("g")
                            @if (a.Admin?.User != null)
                            {
                                @: â€¢ by @a.Admin.User.Username
                            }
                        </div>
                    </div>
                    @if ((DateTime.Now - a.CreatedDate).TotalHours < 72)
                    {
                        <span class="badge bg-success">New</span>
                    }
                </div>
                <p class="card-text mt-2">@((a.Description?.Length ?? 0) > 240 ? a.Description.Substring(0,240) + "â€¦" : a.Description)</p>
                <a asp-controller="Announcements" asp-action="Details" asp-route-id="@a.Id" class="btn btn-sm btn-outline-primary">View Details</a>
            </div>
        </div>
    }
    @if (!latest.Any())
    {
        <div class="alert alert-info">No recent announcements.</div>
    }
    <a asp-controller="Announcements" asp-action="Index" class="btn btn-outline-primary">View All Announcements</a>
</div>

