@model VOtingSystemdraft.Models.Voter
@{
    ViewData["Title"] = "Voter Dashboard";
    var username = HttpContextAccessor?.HttpContext?.Session?.GetString("Username");
}

<!-- ðŸ”¹ NAVBAR (Home + Logout) -->
<nav style="
    width: 100%;
    padding: 15px 20px;
    background: #2c3e50;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
">
    <a asp-controller="Voters" asp-action="VoterDashboard"
       style="color: white; text-decoration: none; font-size: 18px; font-weight: bold;">
        Home
    </a>
    @if (!string.IsNullOrEmpty(username))
    {
        <span style="color:white; margin-left:20px; font-weight:bold;">
            Welcome, @username
        </span>
    }

    <a asp-controller="Users" asp-action="Logout"
       style="color: #ff7675; font-weight: bold; text-decoration: none;">
        Logout
    </a>
</nav>

    <!-- Show the normal voter dashboard -->
    <div class="dashboard-container">
        <h1>Voter Dashboard</h1>

        <div class="dashboard-buttons">
            <a asp-controller="Votes" asp-action="Index" class="dashboard-button-style">Cast Vote</a>
            <a asp-controller="Candidates" asp-action="Index" class="dashboard-button-style">View Candidates</a>
            <a asp-controller="Votes" asp-action="MyVotes" class="dashboard-button-style">My Voting History</a>
            <a asp-controller="Voters" asp-action="ElectionInfo" class="dashboard-button-style">Election Guidelines</a>
            <a asp-controller="Voters" asp-action="MyProfile" class="dashboard-button-style">Voter Profile</a>
            <a asp-controller="Results" asp-action="Index" class="dashboard-button-style">See Results</a>
        </div>

      
    </div>

<div class="dashboard-container" style="margin-top:20px;">
    <h2>Latest News</h2>
    <div>
        @{
            var latest = ViewBag.LatestAnnouncements as IEnumerable<VOtingSystemdraft.Models.Announcement>;
            latest = latest ?? Enumerable.Empty<VOtingSystemdraft.Models.Announcement>();
        }
        @foreach (var a in latest)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@a.Title</h5>
                    <p class="text-muted">@a.CreatedDate.ToString("g")</p>
                    <p>@a.Description</p>
                </div>
            </div>
        }
        @if (!latest.Any())
        {
            <div class="alert alert-info">No recent announcements.</div>
        }
        <a asp-controller="Announcements" asp-action="Index" class="btn btn-outline-primary">View All Announcements</a>
    </div>
</div>

