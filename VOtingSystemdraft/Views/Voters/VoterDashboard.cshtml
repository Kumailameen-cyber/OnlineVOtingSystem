@model VOtingSystemdraft.Models.Voter
@{
    ViewData["Title"] = "Voter Dashboard";
    var username = HttpContextAccessor?.HttpContext?.Session?.GetString("Username");
}

<!-- 🔹 NAVBAR (Home + Logout) -->
<nav style="
    width: 100%;
    padding: 15px 20px;
    background: #2c3e50;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
">
    <a asp-controller="Voters" asp-action="VoterDashboard"
       style="color: white; text-decoration: none; font-size: 18px; font-weight: bold;">
        Home
    </a>
    @if (!string.IsNullOrEmpty(username))
    {
        <span style="color:white; margin-left:20px; font-weight:bold;">
            Welcome, @username
        </span>
    }

    <a asp-controller="Users" asp-action="Logout"
       style="color: #ff7675; font-weight: bold; text-decoration: none;">
        Logout
    </a>
</nav>

    <!-- Show the normal voter dashboard -->
    <div class="dashboard-container">
        <h1>Voter Dashboard</h1>

        <div class="dashboard-buttons">
            <a asp-controller="Votes" asp-action="Vote" class="dashboard-button-style">Cast Vote</a>
            <a asp-controller="Candidates" asp-action="Index" class="dashboard-button-style">View Candidates</a>
            <a asp-controller="Votes" asp-action="MyVotes" class="dashboard-button-style">My Voting History</a>
            <a asp-controller="Voters" asp-action="ElectionInfo" class="dashboard-button-style">Election Guidelines</a>
            <a asp-controller="Voters" asp-action="MyProfile" class="dashboard-button-style">Voter Profile</a>
            <a asp-controller="Home" asp-action="Announcements" class="dashboard-button-style">Announcements</a>
        </div>

      
    </div>


<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
    }

    .dashboard-container {
        max-width: 900px;
        margin: 50px auto;
        padding: 40px;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        text-align: center;
    }

    h1 {
        color: #1d976c;
        margin-bottom: 40px;
        font-size: 32px;
        font-weight: 600;
    }

    .dashboard-buttons {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-top: 20px;
    }

    .dashboard-button-style {
        display: block;
        padding: 20px;
        border-radius: 12px;
        text-decoration: none;
        color: white;
        font-size: 18px;
        font-weight: bold;
        transition: 0.3s;
        background: #1d976c;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        text-align: center;
    }

        .dashboard-button-style:hover {
            background: #93f9b9;
            color: #1d976c;
            box-shadow: 0 6px 15px rgba(0,0,0,0.2);
        }

