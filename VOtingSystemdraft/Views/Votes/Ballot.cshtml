@model VOtingSystemdraft.Models.Election

@{
    ViewData["Title"] = "Ballot - " + Model.Title;
}

<div class="container mt-5" style="max-width: 800px;">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Official Ballot: @Model.Title</h3>
        </div>
        <div class="card-body">
            <p class="lead">@Model.Description</p>
            <hr />
            
            <form asp-action="CastVote" method="post">
                <input type="hidden" name="electionId" value="@Model.Id" />
                
                <h4 class="mb-3">Select a Candidate:</h4>
                
                @if (Model.Candidates != null && Model.Candidates.Any())
                {
                    <div class="list-group mb-4">
                        @foreach (var candidate in Model.Candidates)
                        {
                            <label class="list-group-item list-group-item-action d-flex align-items-center cursor-pointer">
                                <input class="form-check-input me-3" type="radio" name="candidateId" value="@candidate.Id" required style="width: 1.2em; height: 1.2em;">
                                <div class="w-100">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@candidate.User?.Username</h5>
                                        <small>@candidate.PartyName</small>
                                    </div>
                                    @if (!string.IsNullOrEmpty(candidate.Symbol))
                                    {
                                        <p class="mb-1">Symbol: @candidate.Symbol</p>
                                    }
                                    @if (!string.IsNullOrEmpty(candidate.Bio))
                                    {
                                        <small class="text-muted">@candidate.Bio</small>
                                    }
                                </div>
                            </label>
                        }
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-envelope-paper-fill"></i> Cast Vote
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <a asp-controller="Voters" asp-action="VoterDashboard" class="btn btn-secondary">Back to Dashboard</a>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        No candidates registered for this election yet.
                    </div>
                    <a asp-action="Index" class="btn btn-secondary">Back to Elections</a>
                }
            </form>
        </div>
    </div>
</div>

<style>
    .cursor-pointer {
        cursor: pointer;
    }
</style>
